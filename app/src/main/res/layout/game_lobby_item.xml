<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/lobby_item_icon"
        android:layout_width="@dimen/game_lobby_icon_size"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/lobby_item_game_name"
        app:srcCompat="@color/colorPrimary"
        android:layout_marginBottom="0dp" />

    <TextView
        android:id="@+id/lobby_item_game_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/game_lobby"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lobby_item_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lobby_item_game_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="0dp"
        android:text="@string/game_lobby"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/lobby_item_game_name"
        app:layout_constraintTop_toBottomOf="@+id/lobby_item_game_name" />

    <ImageView
        android:id="@+id/lobby_item_user_icon"
        android:layout_width="@dimen/user_icon_size"
        android:layout_height="@dimen/user_icon_size"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@null"
        app:layout_constraintStart_toStartOf="@+id/lobby_item_game_id"
        app:layout_constraintTop_toBottomOf="@+id/lobby_item_game_id"
        app:srcCompat="@drawable/icon_person" />

    <TextView
        android:id="@+id/lobby_item_user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/email"
        app:layout_constraintBottom_toBottomOf="@+id/lobby_item_user_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lobby_item_user_icon"
        app:layout_constraintTop_toTopOf="@+id/lobby_item_user_icon" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/user_icon_size"
        android:layout_height="@dimen/user_icon_size"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:contentDescription="@null"
        app:layout_constraintStart_toStartOf="@+id/lobby_item_user_icon"
        app:layout_constraintTop_toBottomOf="@+id/lobby_item_user_icon"
        app:srcCompat="@drawable/icon_time" />

    <TextView
        android:id="@+id/lobby_item_timestamp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/game_lobby"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />


</android.support.constraint.ConstraintLayout>